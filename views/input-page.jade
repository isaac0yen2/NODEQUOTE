doctype html
html
  head
    title NodeQuote - Submit Quote
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eef5fc;
      }
      .container {
        text-align: center;
        padding: 100px;
      }
      h1 {
        font-size: 36px;
        color: #1a73e8;
      }
      .input-container {
        margin-top: 30px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }
      label {
        font-size: 18px;
        color: #333333;
        display: block;
        margin-bottom: 10px;
      }
      input[type="text"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #cccccc;
        border-radius: 4px;
      }
      .btn {
        display: inline-block;
        margin-top: 30px;
        background-color: #1a73e8;
        color: #ffffff;
        font-size: 18px;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

  body
    .container
      h1 Submit Your Own Quote
      .input-container
        form(action='/submit-quote' method='post')
          label(for='quote') Quote:
          input(type='text' id='quote' name='quote' placeholder='Enter your quote' required)
          button.btn(type='submit') Submit
      form(action="/", method="POST") 
        button(class="btn") Back to Home
